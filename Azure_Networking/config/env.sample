# Copy this file to config/.env and set your values
export SUBSCRIPTION_ID="00000000-0000-0000-0000-000000000000"
export RG_NAME="AzureNetWorkshopRG"
export LOCATION="eastus"
export SECONDARY_LOCATION="westus3"
export PREFIX="hcnet"
export VNET_NAME="$PREFIX-vnet"
export VNET_CIDR="10.10.0.0/16"
# Subnet CIDRs (ensure non-overlapping)
export SUBNET_WEB_CIDR="10.10.10.0/24"
export SUBNET_APP_CIDR="10.10.20.0/24"
export SUBNET_DB_CIDR="10.10.30.0/24"
export SUBNET_MGMT_CIDR="10.10.40.0/24"
export SUBNET_AZFW_CIDR="10.10.254.0/26"
export SUBNET_GW_CIDR="10.10.255.0/27"
# Names
export SA_NAME="${PREFIX}sa$RANDOM"
export LA_WORKSPACE="${PREFIX}-la"
export LAW_RETENTION_DAYS="30"
export TAG_ENV="training"
export ADMIN_USERNAME="azureuser"
# NOTE: SSH key required locally (~/.ssh/id_rsa.pub). If not present, create it.
export SSH_KEY_PATH="$HOME/.ssh/id_rsa.pub"
# Postgres
export PG_NAME="${PREFIX}-pgflex"
export PG_SKU="Standard_D2s_v5"
export PG_VERSION="16"
export PG_TIER="GeneralPurpose"
export PG_STORAGE_SIZE_GB="64"
export PG_ADMIN="pgadmin"
export PG_PASSWORD="P@ssword1234!"  # demo only
# App Gateway DNS label (Auto-creates FQDN <label>.<region>.cloudapp.azure.com)
export APPGW_DNS_LABEL="${PREFIX}appgw"
# Bastion DNS label
export BASTION_DNS_LABEL="${PREFIX}bastion"
# Load Balancer Public IP DNS label
export LB_DNS_LABEL="${PREFIX}lb"
# AFD Profile name
export AFD_PROFILE="${PREFIX}-afd"
# Traffic Manager profile
export TM_PROFILE="${PREFIX}-tm"
# DDoS plan
export DDOS_PLAN="${PREFIX}-ddos"
# VPN params
export SHARED_KEY="P@ssword123!"
export ONSITE_PUBLIC_IP="1.2.3.4" # replace with your VyOS public IP
export ONSITE_ADDRESS_SPACE="172.16.0.0/16"
# ExpressRoute (CAUTION: May incur charges when circuit is created)
export ER_CIRCUIT="${PREFIX}-ercircuit"
export ER_BANDWIDTH="50" # Mbps
export ER_SKU_TIER="Standard"  # Standard or Premium
export ER_SKU_FAMILY="MeteredData"  # MeteredData or UnlimitedData
export ER_PEERING_LOCATION="Silicon Valley"  # choose a valid peering location
